<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="ButtonStylePrimary" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/btn_rounded_primary</item>
    </style>

    <style name="ButtonStyleRed" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/btn_rounded_red</item>
    </style>

    <style name="ButtonStyleGreen" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/btn_rounded_green</item>
    </style>

</resources>
